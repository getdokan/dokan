{
    "extends": [ "plugin:@wordpress/eslint-plugin/recommended" ],
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [ "src" ],
                "extensions": [ ".js", ".jsx", ".ts", ".tsx", ".vue" ]
            },
            "typescript": {
                "project": "./tsconfig.json"
            },
            "alias": {
                "map": [
                    ["@dokan", "./src"]
                ],
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
